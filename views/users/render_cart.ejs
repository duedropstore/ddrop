                        <div class="card">
                            <div class="card-header" id="headingWeekly">
                                <h5 class="mb-0">
                                    <button class="btn btn-link" type="button" data-toggle="collapse"
                                        data-target="#collapseWeekly" aria-expanded="true"
                                        aria-controls="collapseWeekly">
                                        WEEKLY CART
                                    </button>
                                </h5>
                                <a href="/carts/activate_weekly/<%=user_id%>">Activate</a>
                            </div>

                            <div id="collapseWeekly" class="collapse show" aria-labelledby="headingWeekly"
                                data-parent="#timeframeAccordion">
                                <div class="card-body">
                                    <div class="row">
                                        <% if(weekly_cart && weekly_cart.pre_orders.length> 0) { %>
                                            <% weekly_cart.pre_orders.forEach(function(product, index) { %>
                                                <div class="col-md-4 d-flex align-items-stretch">
                                                    <div class="card mb-4">
                                                        <!-- Product Image -->
                                                        <img src="<%= product.product.images.length ? product.product.images[0].url.replace('http://', 'https://') : 'default_image_url' %>"
                                                            class="card-img-top" alt="...">
                                                        <div class="card-body">
                                                            <h5 class="card-title">
                                                                <%= product.product.title %>
                                                            </h5>
                                                            <p class="card-text">
                                                                <%= product.product.caption %>
                                                            </p>
                                                            <p class="card-text">Price: <%= product.price %>
                                                            </p>
                                                            <p class="card-text">Quantity: <%= product.quantity %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% if ((index + 1) % 3===0) { %>
                                    </div>
                                    <div class="row">
                                        <% } %>
                                            <% }); %>
                                                <% } else { %>
                                                    <p>No products found.</p>
                                                    <% } %>
