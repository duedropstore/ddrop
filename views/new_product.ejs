<% layout('layouts/boilerplate')%>
    <div class="row">

        <h1 class="text-center">New Product</h1>
        <div class="col-md-8 offset-md-2">
            <form action="/products/new" method="POST" novalidate class="validated-form" enctype="multipart/form-data">


                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="title" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <input class="form-control" type="text" id="description" name="description" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="weighted">Is this item weighted? (for example, habanero peppers where
                        users choose a weight)</label>
                    <input class="form-check-input" type="checkbox" id="weighted" name="weighted">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">If weighted, what's the unit of measurement</label>
                    <input class="form-control" type="text" id="description" name="description" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Quantity</label>
                    <input class="form-control" type="number" id="description" name="description" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Measurement Description</label>
                    <input class="form-control" type="text" id="description" name="description" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <input class="form-control" type="number" id="price" name="price" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="col-12 col-md-4 mb-3">
                    <label class="form-label" for="category">Category:</label>
                    <input class="form-control" type="text" id="category" name="category" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

        </div>
        <div class="mb-3">
            <div class="form-file custom-file">
                <input type="file" class="form-file-input" id="image" name="image" multiple>
                <label class="form-file-label" for="image">
                    <span class="form-file-text custom-file-label">Seleccione Imagen(es)...</span>
                    <span class="form-file-button">Look up in Library</span>
                </label>
            </div>
        </div>
        <div class="mb-3">
            <button class="btn btn-success">Agregar Articulo</button>
        </div>
        </form>
    </div>

    <a href="/places">Home</a>